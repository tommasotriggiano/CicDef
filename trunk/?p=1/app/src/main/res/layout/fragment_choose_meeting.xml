<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/meetingAddress"
        android:layout_width="283dp"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/enterMeetingAddress"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Indirizzo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/Indirizzo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="452dp"
        android:layout_marginTop="8dp"
        android:background="?attr/editTextBackground"
        android:ems="10"
        android:text="@string/Address"
        android:textColor="@color/black_overlay"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetingAddress"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/meetingHour"
        android:layout_width="283dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="15dp"
        android:text="@string/enterMeetingHour"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/meetingHourSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Indirizzo"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="16dp" />

    <Spinner
        android:id="@+id/meetingHourSpinner"
        android:layout_width="281dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/Hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetingHour" />

    <TextView
        android:id="@+id/startHour"
        android:layout_width="283dp"
        android:layout_height="31dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="@string/startHour"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinner4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetingHourSpinner"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/endHour"
        android:layout_width="283dp"
        android:layout_height="31dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="@string/endHour"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinner3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner4"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="16dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="281dp"
        android:layout_height="43dp"
        android:layout_marginEnd="87dp"
        android:layout_marginTop="88dp"
        android:entries="@array/Hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startHour"
        android:layout_marginRight="87dp" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="281dp"
        android:layout_height="43dp"
        android:layout_marginEnd="87dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:entries="@array/Hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startHour"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="87dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="34dp"
        android:text="@string/goOn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner3"
        android:layout_marginLeft="236dp"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>