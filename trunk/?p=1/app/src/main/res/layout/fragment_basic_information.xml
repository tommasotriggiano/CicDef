<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addImage"
                android:layout_width="252dp"
                android:layout_height="39dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="116dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="116dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/descriptionImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/addImage" />

            <TextView
                android:id="@+id/descriptionImage"
                android:layout_width="358dp"
                android:layout_height="60dp"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/imageButton2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addImage"
                tools:text="@string/addImageDescription" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="162dp"
                android:layout_height="188dp"
                android:layout_marginBottom="240dp"
                android:layout_marginEnd="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="6dp"
                android:contentDescription="@string/description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionImage"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/title"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginEnd="175dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="175dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="24dp"
                android:text="@string/title"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2"/>

            <EditText
                android:id="@+id/title1"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/title"/>/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="33dp"
                android:layout_marginEnd="197dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="197dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:text="@string/description"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description1"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="77dp"
                android:layout_marginEnd="134dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="134dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:text="@string/category"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="248dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:entries="@array/Categories"
                android:layout_marginEnd="120dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/goOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goOn" />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>